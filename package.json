{
  "name": "eslint-configs",
  "version": "1.0.0",
  "description": "ESLint configurations for TypeScript and Svelte projects",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sourceMap": "src",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "prepublishOnly": "npm run build && npm run format",
    "update:npm-packages": "ncu --target minor -u && ncu --interactive --format group",
    "dev:run-container": "docker-compose -f docker-compose.dev.yml up --build",
    "dev:container-logs": "docker-compose -f docker-compose.dev.yml logs",
    "dev:open-in-vs-code": "devcontainer open ."
  },
  "peerDependencies": {
    "eslint": "^9.34.0",
    "typescript-eslint": "^8.42.0",
    "prettier": "^3.6.2"
  },
  "devDependencies": {
    "eslint": "^9.35.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "prettier": "^3.6.2"
  },
  "keywords": [
    "eslint",
    "config",
    "typescript",
    "svelte"
  ]
}
